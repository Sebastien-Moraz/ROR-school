<% content_for :title, "Liste des cours" %>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Liste des cours</h1>
    <%= link_to "Nouveau cours", new_course_path, class: "btn btn-primary" %>
  </div>

  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <div class="card">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Matière</th>
              <th>Classe</th>
              <th>Enseignant</th>
              <th>Jour</th>
              <th>Horaires</th>
              <th>Actions</th>
            </tr>
          </thead>

          <tbody>
            <% @courses.each do |course| %>
              <tr>
                <td><%= course.subject.name if course.subject.present? %></td>
                <td><%= course.school_class.name if course.school_class.present? %></td>
                <td><%= "#{course.person.firstname} #{course.person.lastname}" if course.person.present? %></td>
                <td><%= I18n.t("date.day_names")[Course.week_days[course.week_day]] %></td>
                <td><%= "#{course.start_at.strftime('%H:%M')} - #{course.end_at.strftime('%H:%M')}" %></td>
                <td>
                  <div class="btn-group">
                    <%= link_to "Voir", course, class: "btn btn-sm btn-info" %>
                    <%= link_to "Modifier", edit_course_path(course), class: "btn btn-sm btn-warning" %>
                    <%= link_to "Supprimer", course, class: "btn btn-sm btn-danger", data: { turbo_method: :delete, turbo_confirm: "Êtes-vous sûr ?" } %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
