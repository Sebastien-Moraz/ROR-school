<% content_for :title, "Détails du cours" %>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Détails du cours</h1>
    <div class="btn-group">
      <%= link_to "Modifier", edit_course_path(@course), class: "btn btn-warning" %>
      <%= link_to "Retour", courses_path, class: "btn btn-secondary" %>
      <%= button_to "Supprimer", @course, method: :delete, class: "btn btn-danger", form: { data: { turbo_confirm: "Êtes-vous sûr de vouloir supprimer ce cours ?" } } %>
    </div>
  </div>

  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <%= render @course %>
</div>
