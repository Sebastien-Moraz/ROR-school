<% content_for :title, "Détails du cours" %>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Détails du cours</h1>
    <div class="btn-group">
      <% if current_person.admin? %>
        <%= link_to edit_course_path(@course), class: "btn btn-warning" do %>
          <i class="bi bi-pencil"></i> Modifier
        <% end %>
      <% end %>
      <%= link_to courses_path, class: "btn btn-secondary" do %>
        <i class="bi bi-arrow-left"></i> Retour
      <% end %>
      <% if current_person.admin? %>
        <%= button_to @course, 
                      method: :delete, 
                      class: "btn btn-danger", 
                      form: { data: { turbo_confirm: "Êtes-vous sûr de vouloir supprimer ce cours ?" } } do %>
          <i class="bi bi-trash"></i> Supprimer
        <% end %>
      <% end %>
    </div>
  </div>

  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <%= render @course %>
</div>
