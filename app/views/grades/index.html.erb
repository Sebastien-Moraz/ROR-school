<% content_for :title, "Gestion des notes" %>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Gestion des notes</h1>
    <%= link_to new_grade_path, class: "btn btn-success d-flex align-items-center gap-2" do %>
      <i class="bi bi-plus-circle-fill"></i>
      <span>Nouvelle note</span>
    <% end %>
  </div>

  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <div class="table-responsive">
    <table class="table table-hover">
      <thead class="table-light">
        <tr>
          <th>Étudiant</th>
          <th>Examen</th>
          <th>Note</th>
          <th>Date prévue</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @grades.each do |grade| %>
          <tr>
            <td><%= "#{grade.person.firstname} #{grade.person.lastname}" if grade.person.present? %></td>
            <td>
              <% if grade.examination.present? %>
                <%= grade.examination.title %>
                <div class="text-muted small">
                  <%= "#{grade.examination.course.subject.name} - #{grade.examination.course.classe.name}" if grade.examination.course.present? %>
                </div>
              <% end %>
            </td>
            <td>
              <span class="badge <%= grade.value >= 10 ? 'bg-success' : 'bg-danger' %>">
                <%= grade.value %>/20
              </span>
            </td>
            <td><%= grade.expected_at.strftime("%d/%m/%Y") if grade.expected_at.present? %></td>
            <td>
              <div class="d-flex gap-2 justify-content-end">
                <%= link_to grade, class: "btn btn-sm btn-primary", title: "Voir" do %>
                  <i class="bi bi-eye-fill"></i>
                <% end %>

                <%= link_to edit_grade_path(grade), class: "btn btn-sm btn-warning", title: "Modifier" do %>
                  <i class="bi bi-pencil-fill text-white"></i>
                <% end %>

                <%= button_to grade_path(grade), 
                    method: :delete, 
                    class: "btn btn-sm btn-danger", 
                    title: "Supprimer",
                    form: { 
                      class: "d-inline-block",
                      data: { turbo_confirm: "Êtes-vous sûr de vouloir supprimer cette note ?" } 
                    } do %>
                  <i class="bi bi-trash-fill"></i>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
