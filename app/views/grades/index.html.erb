<% content_for :title, "Gestion des notes" %>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Gestion des notes</h1>
    <%= link_to new_grade_path, class: "btn btn-success d-flex align-items-center gap-2" do %>
      <i class="bi bi-plus-circle-fill"></i>
      <span>Nouvelle note</span>
    <% end %>
  </div>

  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <% if @grades.any? %>
    <div class="table-responsive">
      <table class="table table-hover">
        <thead class="table-light">
          <tr>
            <th>Valeur</th>
            <th>Étudiant</th>
            <th>Examen</th>
            <th>Date</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @grades.each do |grade| %>
            <tr>
              <td><%= grade.value %>/20</td>
              <td><%= "#{grade.person.firstname} #{grade.person.lastname}" if grade.person.present? %></td>
              <td><%= grade.examination.title if grade.examination.present? %></td>
              <td><%= l(grade.expected_at, format: :long) if grade.expected_at.present? %></td>
              <td>
                <div class="d-flex gap-2 justify-content-end">
                  <%= link_to grade, class: "btn btn-sm btn-primary", title: "Voir" do %>
                    <i class="bi bi-eye-fill"></i>
                  <% end %>

                  <%= link_to edit_grade_path(grade), class: "btn btn-sm btn-warning", title: "Modifier" do %>
                    <i class="bi bi-pencil-fill text-white"></i>
                  <% end %>

                  <%= button_to grade_path(grade), 
                      method: :delete, 
                      class: "btn btn-sm btn-danger", 
                      title: "Supprimer",
                      form: { 
                        class: "d-inline-block",
                        data: { turbo_confirm: "Êtes-vous sûr de vouloir supprimer cette note ?" } 
                      } do %>
                    <i class="bi bi-trash-fill"></i>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <% if current_person.student? %>
      <div class="card mt-4">
        <div class="card-body">
          <h5 class="card-title">Moyenne générale</h5>
          <% average = @grades.average(:value).to_f.round(2) %>
          <p class="card-text">
            <span class="badge <%= average >= 10 ? 'bg-success' : 'bg-danger' %> fs-5">
              <%= average %>/20
            </span>
          </p>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="alert alert-info">
      <%= current_person.student? ? "Vous n'avez pas encore de notes." : "Aucune note n'a été enregistrée." %>
    </div>
  <% end %>
</div>
