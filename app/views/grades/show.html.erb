<% content_for :title, "Détails de la note" %>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Détails de la note</h1>
    <div class="btn-group">
      <%= link_to "Modifier", edit_grade_path(@grade), class: "btn btn-warning" %>
      <%= link_to "Retour", grades_path, class: "btn btn-secondary" %>
      <%= button_to "Supprimer", @grade, method: :delete, class: "btn btn-danger", form: { data: { turbo_confirm: "Êtes-vous sûr de vouloir supprimer cette note ?" } } %>
    </div>
  </div>

  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <%= render @grade %>
</div>
