<div class="card">
  <div class="card-header">
    <h2>Inscription</h2>
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="row">
        <div class="col-md-6 mb-3">
          <%= f.label :username, "Nom d'utilisateur", class: "form-label" %>
          <%= f.text_field :username, autofocus: true, class: "form-control" %>
        </div>

        <div class="col-md-6 mb-3">
          <%= f.label :email, "Email", class: "form-label" %>
          <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6 mb-3">
          <%= f.label :firstname, "Prénom", class: "form-label" %>
          <%= f.text_field :firstname, class: "form-control" %>
        </div>

        <div class="col-md-6 mb-3">
          <%= f.label :lastname, "Nom", class: "form-label" %>
          <%= f.text_field :lastname, class: "form-control" %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6 mb-3">
          <%= f.label :phone_number, "Numéro de téléphone", class: "form-label" %>
          <%= f.text_field :phone_number, class: "form-control" %>
        </div>

        <div class="col-md-6 mb-3">
          <%= f.label :role, "Rôle", class: "form-label" %>
          <%= f.select :role, Person.roles.keys.map { |role| [role.humanize, role] }, {}, class: "form-select" %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6 mb-3">
          <%= f.label :iban, "IBAN", class: "form-label" %>
          <%= f.text_field :iban, class: "form-control" %>
        </div>

        <div class="col-md-6 mb-3">
          <%= f.label :address_id, "Adresse", class: "form-label" %>
          <%= f.collection_select :address_id, Address.all, :id, :full_address, { prompt: "Sélectionnez une adresse" }, class: "form-select" %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6 mb-3">
          <%= f.label :password, "Mot de passe", class: "form-label" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> caractères minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="col-md-6 mb-3">
          <%= f.label :password_confirmation, "Confirmation du mot de passe", class: "form-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>
      </div>

      <div class="d-grid gap-2">
        <%= f.submit "S'inscrire", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  <div class="card-footer">
    <%= render "devise/shared/links" %>
  </div>
</div>
