<% content_for :title, "Gestion des salles" %>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Gestion des salles</h1>
    <%= link_to new_room_path, class: "btn btn-success d-flex align-items-center gap-2" do %>
      <i class="bi bi-plus-circle-fill"></i>
      <span>Nouvelle salle</span>
    <% end %>
  </div>

  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <div class="table-responsive">
    <table class="table table-hover">
      <thead class="table-light">
        <tr>
          <th>Nom</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @rooms.each do |room| %>
          <tr>
            <td><%= room.name %></td>
            <td>
              <div class="d-flex gap-2 justify-content-end">
                <%= link_to room, class: "btn btn-sm btn-primary", title: "Voir" do %>
                  <i class="bi bi-eye-fill"></i>
                <% end %>

                <%= link_to edit_room_path(room), class: "btn btn-sm btn-warning", title: "Modifier" do %>
                  <i class="bi bi-pencil-fill text-white"></i>
                <% end %>

                <%= button_to room_path(room), 
                    method: :delete, 
                    class: "btn btn-sm btn-danger", 
                    title: "Supprimer",
                    form: { 
                      class: "d-inline-block",
                      data: { turbo_confirm: "Êtes-vous sûr de vouloir supprimer cette salle ?" } 
                    } do %>
                  <i class="bi bi-trash-fill"></i>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
