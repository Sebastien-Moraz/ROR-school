<%= form_with(model: room) do |form| %>
  <% if room.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(room.errors.count, "erreur") %> ont empêché la sauvegarde de cette salle :</h2>
      <ul>
        <% room.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card mb-4">
    <div class="card-header">
      <h5 class="mb-0">Informations de la salle</h5>
    </div>
    <div class="card-body">
      <div class="mb-3">
        <%= form.label :name, "Nom de la salle", class: "form-label" %>
        <%= form.text_field :name, class: "form-control", placeholder: "Ex: Salle 101" %>
      </div>
    </div>
  </div>

  <div class="mt-4">
    <%= form.submit "Enregistrer", class: "btn btn-primary" %>
    <%= link_to "Retour", rooms_path, class: "btn btn-secondary ms-2" %>
  </div>
<% end %>
