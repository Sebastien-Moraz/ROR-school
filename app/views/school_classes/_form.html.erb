<%= form_with(model: school_class) do |form| %>
  <% if school_class.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(school_class.errors.count, "error") %> prohibited this school_class from being saved:</h2>

      <ul>
        <% school_class.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :uid, style: "display: block" %>
    <%= form.text_field :uid %>
  </div>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :person_id, style: "display: block" %>
    <%= form.collection_select :person_id, Person.where(role: :teacher), :id, :username, { prompt: "Sélectionnez un responsable" } %>
  </div>

  <div>
    <%= form.label :room_id, style: "display: block" %>
    <%= form.collection_select :room_id, Room.all, :id, :name, { prompt: "Sélectionnez une salle" } %>
  </div>

  <div>
    <%= form.label :moment_id, style: "display: block" %>
    <%= form.collection_select :moment_id, Moment.all, :id, :uid, { prompt: "Sélectionnez un moment" } %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
