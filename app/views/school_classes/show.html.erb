<% content_for :title, "Détails de la classe" %>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Détails de la classe</h1>
    <div class="btn-group">
      <%= link_to "Modifier", edit_school_class_path(@school_class), class: "btn btn-warning" %>
      <%= link_to "Retour", school_classes_path, class: "btn btn-secondary" %>
      <%= button_to "Supprimer", @school_class, method: :delete, class: "btn btn-danger", form: { data: { turbo_confirm: "Êtes-vous sûr de vouloir supprimer cette classe ?" } } %>
    </div>
  </div>

  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <%= render @school_class %>
</div>
