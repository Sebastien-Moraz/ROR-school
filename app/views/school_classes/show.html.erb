<% content_for :title, "Détails de la classe" %>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Détails de la classe</h1>
    <div class="btn-group">
      <% if current_person.admin? %>
        <%= link_to manage_students_school_class_path(@school_class), class: "btn btn-info text-white" do %>
          <i class="bi bi-people-fill me-1"></i>
          Gérer les étudiants
        <% end %>
        <%= link_to edit_school_class_path(@school_class), class: "btn btn-warning" do %>
          <i class="bi bi-pencil"></i> Modifier
        <% end %>
      <% end %>
      <%= link_to school_classes_path, class: "btn btn-secondary" do %>
        <i class="bi bi-arrow-left"></i> Retour
      <% end %>
      <% if current_person.admin? %>
        <%= button_to @school_class, 
                      method: :delete, 
                      class: "btn btn-danger", 
                      form: { data: { turbo_confirm: "Êtes-vous sûr de vouloir supprimer cette classe ?" } } do %>
          <i class="bi bi-trash"></i> Supprimer
        <% end %>
      <% end %>
    </div>
  </div>

  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <%= render @school_class %>
</div>
